<!DOCTYPE html>
<html lang="pt-PT">

<head>
    <title>
        <%= title %>
    </title>
    <link rel='stylesheet' href='/stylesheets/base.css' />
    <link rel="stylesheet" href="/fonts/fontawesome/css/all.css">
    <link rel="stylesheet" href="/stylesheets/alunos.css">
</head>

<body>
    <nav class="left_bar">
        <ul class="menu">
            <li class="menu_item--left">
                <button type="button" class="menu_item" title="Estatísticas" id="btnDash">
                    <i class="fa fa-chart-line"></i>
                </button>
            </li>

            <li class="menu_item--left">
                <button type="button" class="menu_item" id="btnVerAlunos" title="Ver alunos">
                    <i class="fa fa-list"></i>
                </button>
            </li>

            <li class="menu_item--left">
                <button type="button" class="menu_item" id="btnIncscricoes" title="Inscrições">
                    <i class="fa fa-book-open"></i>
                </button>
            </li>
            <li class="menu_item--left">
                <button type="button" class="menu_item" id="btnPagamentos" title="Pagamentos">
                    <i class="fa fa-coins"></i>
                </button>
            </li>
            <li class="menu_item--left">
                <button type="button" class="menu_item" id="btnCursos" title="Cursos">
                    <i class="fa fa-book"></i>
                </button>
            </li>

            <li class="menu_item--left">
                <button type="button" class="menu_item" id="btnConfig" title="Configurações">
                    <i class="fa fa-gear"></i>
                </button>
            </li>
            <li class="menu_item--left">
                <button type="button" class="menu_item" id="btnSobre" title="Sobre">
                    <i class="fa fa-users"></i>
                </button>
            </li>
        </ul>
    </nav>

    <main>
        <div class="top_bar">
            <h1 class="title"> Meus Alunos</h1>

            <ul class="top_menu">
                <li class="menu_item--top">
                    <button type="button" class="acoesAlunos" id="btnCriarRegistro" title="Criar">
                        <i class="fa fa-add"></i> Novo
                    </button>
                </li>
                <li class="menu_item--top">
                    <button type="button" class="acoesAlunos" id="btnEditarRegisto" title="Editar">
                        <i class="fa fa-edit"></i> Editar
                    </button>
                </li>
                <li class="menu_item--top">
                    <button type="button" class="acoesAlunos" id="btnApagarRegisto" title="Apagar">
                        <i class="fa fa-trash"></i> Eliminar
                    </button>
                </li>
            </ul>
        </div>

        <div class="tableContainer">
            <table>
                <thead>
                    <tr>
                        <th class="titleTab">Nº</th>
                        <th class="titleTab">Código Aluno</th>
                        <th class="titleTab">Nome Completo</th>
                        <th class="titleTab">Apelido</th>
                        <th class="titleTab">Idade</th>
                        <th class="titleTab">Encarregado</th>
                        <th class="titleTab">Pagamento</th>
                        <th class="titleTab">Estado</th>
                        <th class="titleTab">
                            <label for="ckTodos">
                                <input type="checkbox" name="ckTodos" id="ckTodos">Todos
                            </label>
                        </th>
                    </tr>
                </thead>

                <tbody>

                    <tr>
                        <td class="dadosTab">
                            01
                        </td>
                        <td class="dadosTab">
                            CAF2031
                        </td>

                        <td class="dadosTab">Fernando Congolo</td>
                        <td class="dadosTab">Professor</td>
                        <td class="dadosTab">23 anos</td>
                        <td class="dadosTab">Amaraldo Campos</td>
                        <td class="estadoPagamento-regular dadosTab">Regular</td>
                        <td class="dadosTab">
                            Frequente
                        </td>

                        <td class="ckAluno">
                            <input type="checkbox" name="ckAlunos">
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </main>


    <div class="janela-modal" id="novo-modal">
        <div class="modal">
            <button type="button" class="fechar" id="fechar">X</button>
            <h1>Registar Aluno</h1>

            <form method="post" id="formNovoAluno" class="formCadastro" action="/ver_alunos">
                <fieldset>
                    <legend>Dados do Aluno</legend>
                    <label for="nomeCompleto">Nome Completo:</label>
                    <input type="text" class="campo" id="nomeCompleto" name="nomeCompleto" maxlength="50">
                    <label for="Apelido">Apelido:</label>
                    <input type="text" class="campo" id="apelido" name="apelido" maxlength="50">
                    <label for="dataNasc">Data de Nascimento: </label>
                    <input type="date"  class="campo" name="dataNasc" id="dataNasc">
                    <label for="naturalidade">Naturalidade: </label>
                    <input type="text" class="campo" name="naturalidade" id="naturalidade">
                    <label for="morada">Morada:</label>
                    <input type="text" class="campo" name="morada" id="morada">
                </fieldset>

                <fieldset>
                    <legend>Filiação</legend>
                    <label for="nomePai">Nome do Pai:</label>
                    <input type="text" class="campo" id="nomePai" name="nomePai">
                    <label for="nomeMae"> Nome da Mãe:</label>
                    <input type="text" class="campo" id="nomeMae" name="nomeMae">
                </fieldset>
                <label for="selEstado"> Estado:</label>
                <select name="selEstado" id="selEstado">
                    <option value="freq" selected>Frequente</option>
                    <option value="desi">Desistente</option>
                </select>

                <button type="submit" id="btnRegistar" name="btnRegistar" class="btn">Registar</button>
                <button type="reset" id="btnCancelar" name="btnCancelar" class="btn">Cancelar Registo</button>
            </form>
        </div>
    </div>

    <div class="janela-modal" id="editar-modal">
        <div class="modal">
            <button type="button" class="fechar" id="fechar">X</button>
            <h1>Editar Registar</h1>

            <form method="post" id="formEditarRegisto" class="formCadastro" action="/ver_alunos">
                <fieldset>
                    <legend>Dados do Aluno</legend>
                    <label for="nomeCompleto">Nome Completo:</label>
                    <input type="text" class="campo" id="nomeCompleto" name="nomeCompleto" maxlength="50">
                    <label for="Apelido">Apelido:</label>
                    <input type="text" class="campo" id="apelido" name="apelido" maxlength="50">
                    <label for="dataNasc">Data de Nascimento: </label>
                    <input type="date"  class="campo" name="dataNasc" id="dataNasc">
                    <label for="naturalidade">Naturalidade: </label>
                    <input type="text" class="campo" name="naturalidade" id="naturalidade">
                    <label for="morada">Morada:</label>
                    <input type="text" class="campo" name="morada" id="morada">
                </fieldset>

                <fieldset>
                    <legend>Filiação</legend>
                    <label for="nomePai">Nome do Pai:</label>
                    <input type="text" class="campo" id="nomePai" name="nomePai">
                    <label for="nomeMae"> Nome da Mãe:</label>
                    <input type="text" class="campo" id="nomeMae" name="nomeMae">
                </fieldset>
                <label for="selEstado"> Estado:</label>
                <select name="selEstado" id="selEstado">
                    <option value="freq" selected>Frequente</option>
                    <option value="desi">Desistente</option>
                </select>

                <button type="submit" id="btnRegistar" name="btnGuardar" class="btn">Guardar</button>
                <button type="reset" id="btnCancelar" name="btnCancelar" class="btn">Cancelar</button>
            </form>
        </div>
    </div>

</body>

<script src="/javascripts/alunos.js"></script>
<script src="/javascripts/menu.js"></script>

</html>